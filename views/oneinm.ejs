<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inmobiliaria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/oneinm.css">
  </head>
  <body>
    <header>
      <%- include('modules/navbar') %>
    </header>
    <h1 class="text-center m-5">Detalles inmobiliaria</h1>
    
    <main>
      <section>
        <div class="container-xxl">
          <div class="row">
            <div class="col-12 text-center">
              <img class="w-75 rounded-4" src="/images/inmobiliaria/<%= inm.r_img %>" alt="">
              <p class="mt-5 mb-3 fs-2 fw-bold">Descripción:</p>
              <br>
              <p class="fs-3"><%= inm.r_description %></p>
              <p>eMail: <%= inm.email %> Telefono: <%= inm.tel %></p>
              <a href="/oneinm/<%= inm.r_id %>/addhouse" class="btn btn-success text-center">Registro de nueva casa</a>
            </div>
          </div>
        </div>
      </section>
      
      
      <section>
        
      
       <div class="container-fluid">
        <div class="row justify-content-center">
      
      
      <div class="col d-flex flex-wrap justify-content-center gap-4 m-5">
        <% resultHouse.forEach((elem)=>{ %>
              <div class="card" style="width: 35rem;">
                  <img src="/images/casas/<%= elem.h_img %>" class="card-img-top" alt="...">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <h2 class="card-title">Dirección: <%= elem.address %></h2>
                    <div>
                      <p class="card-text">Localidad: <%= elem.location %></p>
                      <p class="card-text">Año de construcción: <%= elem.year %> Metros Cuadrados: <%= elem.mtrs %></p>
                      <p class="card-text">Descripción: <%= elem.h_description %></p>
                    </div>
      
                          <div class="">
                            <a class="btn btn-success" href="/houses/editHouse/<%= elem.h_id %>">Editar</a>
                            <a class="btn btn-success" href="/houses/delete/<%= elem.h_id %>/<%= elem.r_id %>">Eliminar</a>
                            <a class="btn btn-success" href="/houses/logicDelete/<%= elem.h_id %>">Eliminado lógico</a>
                          </div>
                                              
                    
      
                  </div>
                </div>
              <% }) %>
        </div>
        
      
      
      
      
      
      
        </div>
       </div>
      </section>
    </main>

    

    <%- include('modules/footer') %>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>