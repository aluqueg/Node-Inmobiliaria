<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inmobiliaria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/addhouse.css">
  </head>
  <body>
    <header>
      <%- include('modules/navbar') %>
    </header>
    

        <main>
          <section>
            <img class="img" src="/images/OIG1.jpeg" alt="logo">
            <h1 class="text-center m-5">Registrar nueva casa</h1>
          </section>
          
             
          
             <section>
              
          
              <div class="fondo d-flex flex-column align-items-center">
                
              <form class="m-5 text-center" action="/oneinm/<%= inm.r_id %>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
          <label for="location" class="form-label">Localidad</label>
          <input
            type="text"
            class="form-control"
            id="location"
            aria-describedby="titleHelp"
            name="location"
          />
                </div>
                <div class="mb-3">
          <label for="address" class="form-label">Dirección</label>
          <input
            type="text"
            class="form-control"
            id="address"
            aria-describedby="estyleHelp"
            name="address"
          />
                </div>
          <div class="mb-3">
            <label for="year" class="form-label">Año</label>
            <input
              type="text"
              class="form-control"
              id="year"
              aria-describedby="estyleHelp"
              name="year"
            />
          </div>
          <div class="mb-3">
            <label for="mtrs" class="form-label">Metros</label>
            <input
              type="text"
              class="form-control"
              id="mtrs"
              aria-describedby="estyleHelp"
              name="mtrs"
            />
          </div>
            <div class="mb-3">
              <label for="h_drescription" class="form-label">Descripción</label>
              <textarea
                type="text"
                class="form-control"
                id="h_description"
                aria-describedby="estyleHelp"
                name="h_description"
              ></textarea>           
                </div>
                <div class="mb-3">
          <label for="img" class="form-label">subir imagen</label>
          <input
            type="file"
            class="form-control"
            id="img"
            aria-describedby="imgHelp"
            name="img"
            hidden
          />
                </div>
                
                
                <button type="submit" class="btn btn-success">Enviar</button>
              </form>
          </div>
          
          
          
          
             </section>
        </main>


    

   <%- include('modules/footer') %>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>