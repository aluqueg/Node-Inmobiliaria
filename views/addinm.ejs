<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inmobiliria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/addinm.css">
    
  </head>
  <body>

    <%- include('modules/navbar') %>
    
    <section>
      <img class="img" src="/images/OIG1.jpeg" alt="logo">
      <h1 class="text-center m-5">Registra tu inmobiliaria.</h1>
    </section>



    <main>
      <section>
        <div class="fondo d-flex justify-content-center text-center">
            <form class="m-5" action="/addinm" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="nombre" class="form-label">Nombre</label>
                  <input
                    type="text"
                    class="form-control"
                    id="nombre"
                    aria-describedby="emailHelp"
                    name="name"
                >
      
                </div>
                <div class="mb-3">
                  <label for="mail" class="form-label">eMail</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    aria-describedby="emailHelp"
                    name="email"
                >
      
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Contraseña</label>
                  <input
                    type="text"
                    class="form-control"
                    id="password"
                    aria-describedby="emailHelp"
                    name="password"
                >
      
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <textarea
                    type="text"
                    class="form-control"
                    id="description"
                    aria-describedby="emailHelp"
                    name="r_description"
                  ></textarea>
              </div>
              <div class="mb-3">
                <label for="Tel" class="form-label">Teléfono</label>
                <input
                  type="text"
                  class="form-control"
                  id="tel"
                  aria-describedby="emailHelp"
                  name="tel"
              >
      
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Añadir imagen</label>
                  <input
                    type="file"
                    class="form-control"
                    id="img"
                    aria-describedby="emailHelp"
                    name="img"
                    hidden
                >
      
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
              </form>
        </div>
      </section>
    </main>




    <%- include('modules/footer') %>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>